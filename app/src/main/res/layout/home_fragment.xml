<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:text="Hello Mukul"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="match_parent"
                android:text="How can we take care of yourself?"
                android:paddingLeft="10dp"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_height="150dp">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_weight="0.5"
                    app:cardBackgroundColor="#5499C7"
                    app:cardCornerRadius="10dp"
                    android:id="@+id/cardOnline"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"

                        android:layout_height="150dp">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="30dp"
                            android:background="@android:color/white"/>

                        <ImageView
                            android:layout_width="100dp"
                            android:src="@drawable/support"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="100dp"
                            android:alpha="0.1"
                            android:layout_alignParentRight="true"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="15dp"

                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="17dp"
                                android:src="@drawable/support"
                                android:layout_marginLeft="10dp"
                                android:layout_height="17dp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:text="I need to consult a doctor online"
                                android:textColor="@android:color/white"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textSize="15dp"
                                />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Chat/Video Call"
                            android:textSize="12dp"
                            android:textColor="@android:color/white"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="10dp"
                            android:layout_height="wrap_content"
                            />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="5dp"
                    app:cardBackgroundColor="#8E44AD"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="10dp"
                    android:id="@+id/cardChember"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"

                        android:layout_height="150dp">

                        <ImageView
                            android:layout_width="100dp"
                            android:src="@drawable/user_white"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="100dp"
                            android:alpha="0.1"
                            android:layout_alignParentRight="true"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="15dp"

                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="17dp"
                                android:src="@drawable/user_white"
                                android:layout_marginLeft="10dp"
                                android:layout_height="17dp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:text="Find best doctors near me"
                                android:textColor="@android:color/white"
                                android:layout_centerVertical="true"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textSize="15dp"
                                />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Clinic/Hospital"
                            android:textSize="12dp"
                            android:textColor="@android:color/white"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="10dp"
                            android:layout_height="wrap_content"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="30dp"
                            android:background="@android:color/white"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="150dp">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_weight="0.5"
                    app:cardBackgroundColor="#239B56"
                    app:cardCornerRadius="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"

                        android:layout_height="150dp">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="30dp"
                            android:background="@android:color/white"/>

                        <ImageView
                            android:layout_width="100dp"
                            android:src="@drawable/support"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="100dp"
                            android:alpha="0.1"
                            android:layout_alignParentRight="true"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="15dp"

                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="17dp"
                                android:src="@drawable/support"
                                android:layout_marginLeft="10dp"
                                android:layout_height="17dp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:text="Request for Review"
                                android:textColor="@android:color/white"
                                android:layout_centerVertical="true"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textSize="15dp"
                                />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Prescription Conult"
                            android:textSize="12dp"
                            android:textColor="@android:color/white"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="10dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView" />



                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="5dp"
                    app:cardBackgroundColor="#D35400"
                    android:layout_marginRight="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"

                        android:layout_height="150dp">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="30dp"
                            android:background="@android:color/white"/>

                        <ImageView
                            android:layout_width="100dp"
                            android:src="@drawable/support"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="100dp"
                            android:alpha="0.1"
                            android:layout_alignParentRight="true"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="15dp"

                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="17dp"
                                android:src="@drawable/support"
                                android:layout_marginLeft="10dp"
                                android:layout_height="17dp"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:text="Personal Physician"
                                android:textColor="@android:color/white"
                                android:layout_centerVertical="true"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textSize="15dp"
                                />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Physician"
                            android:textSize="12dp"
                            android:textColor="@android:color/white"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="10dp"
                            android:layout_height="wrap_content"
                             />



                    </RelativeLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:text="Write us your problems or suggetion"
                android:layout_height="wrap_content"
                />
            <EditText
                android:layout_width="match_parent"
                android:lines="3"
                android:textSize="14dp"
                android:gravity="start"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ed_selector"
                android:layout_height="wrap_content"
                />
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="3dp"
                android:layout_marginBottom="100dp"

                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Submit"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"

                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"
                    />
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>