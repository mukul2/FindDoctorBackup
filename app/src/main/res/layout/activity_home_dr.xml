<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_2"

    tools:context=".Activity.HomeActivityDrActivity">




    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:paddingTop="00dp"
            android:paddingBottom="00dp">

            <LinearLayout
                android:id="@+id/linerhomebutton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:gravity="center"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_one"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_gravity="center"
                    android:src="@drawable/home_primary"

                    />

                <TextView
                    android:id="@+id/tv_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="0dp"
                    android:text="Home"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linerProfileButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.33"

                android:gravity="center"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_two"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_gravity="center"
                    android:src="@drawable/medicine_gray" />

                <TextView
                    android:id="@+id/tv_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="0dp"
                    android:text="Profile"
                    android:textSize="10dp"

                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linerBlogButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.33"

                android:gravity="center"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_three"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_gravity="center"
                    android:src="@drawable/blog"


                    />

                <TextView
                    android:id="@+id/tv_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="0dp"
                    android:text="Blog"
                    android:textSize="10dp"

                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linerSettingButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.33"

                android:gravity="center"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_four"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_gravity="center"
                    android:src="@drawable/setting_gray"


                    />

                <TextView
                    android:id="@+id/tv_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="0dp"
                    android:text="Setting"
                    android:textSize="10dp"

                    />


            </LinearLayout>

        </LinearLayout>
    </android.support.design.widget.BottomNavigationView>


    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:animateLayoutChanges="true"

        android:background="@android:color/transparent">

    </FrameLayout>
</RelativeLayout>