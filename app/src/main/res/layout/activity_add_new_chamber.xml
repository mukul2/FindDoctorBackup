<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.mukul.finddoctor.Activity.AddNewChamberActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Add New Chamber" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:onClick="back"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="10dp"
                android:src="@drawable/left"
                android:layout_gravity="center"
                android:alpha="0.4"
                android:layout_height="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:text="Back"
                android:textSize="10dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:layout_marginBottom="0dp"


                android:layout_height="wrap_content"
                />

        </LinearLayout>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:layout_height="match_parent">
        <EditText
            android:layout_width="match_parent"
            android:background="@drawable/ed_selector"
            android:hint="Chamber address"
            android:gravity="start"
            android:textSize="13dp"
            android:padding="10dp"
            android:id="@+id/ed_address"
            android:lines="3"
            android:layout_height="wrap_content"
            />
        <EditText
            android:layout_width="150dp"
            android:background="@drawable/ed_selector"
            android:hint="Fees"
            android:textSize="13dp"
            android:inputType="number"
            android:padding="10dp"
            android:id="@+id/ed_fees"
            android:layout_height="45dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:text=" + Add a Chamber Day"
            android:textSize="16dp"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="right"
            android:padding="10dp"
            android:textAllCaps="true"
            android:id="@+id/tv_add"
            android:layout_height="wrap_content"
            />
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/recycler_view"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:background="@drawable/stroke_rect_gray"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
        <android.support.v7.widget.CardView
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:onClick="save"            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Save"
                android:textColor="@android:color/white"
                android:paddingRight="50dp"
                android:paddingLeft="50dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:layout_height="wrap_content"
                />
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>
